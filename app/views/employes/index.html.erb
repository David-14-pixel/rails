<% @title="Empleados" %>

<div class="container">


<h1 class="text-center">Empleados</h1>
<%= link_to 'Nuevo Empleado', new_employe_path, class:'btn btn-info text-white' %>
<table class="table table-borderlesss">
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Telephone</th>
      <th>Salary</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employes.each do |employe| %>
      <tr>
        <td><%= employe.name %></td>
        <td><%= employe.last_name %></td>
        <td><%= employe.age %></td>
        <td><%= employe.telephone %></td>
        <td><%= employe.salary %></td>
        <td><%= employe.cargo %></td>
        <td><%= link_to 'Detalle', employe, class: 'btn btn-info text-white' %></td>
        <td><%= link_to 'Editar', edit_employe_path(employe), class: 'btn btn-warning text-white'  %></td>
        <td><%= link_to 'Eliminar', employe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger text-white'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>