<% @title="Empleados" %>
<div class="container my-4">
<div class="row">
<div class="col-8">
<div class="card">
<div class="card-header bg-info">
<h3 class=" text-white text-center">Detalle del empleado <%=@employe.id%></h3>
</div>
<div class="card-body">



<p>
  <strong>Name:</strong>
  <%= @employe.name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @employe.last_name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @employe.age %>
</p>

<p>
  <strong>Telephone:</strong>
  <%= @employe.telephone %>
</p>

<p>
  <strong>Salary:</strong>
  <%= @employe.salary %>
</p>

<p>
  <strong>Cargo:</strong>
  <%= @employe.cargo %>
</p>

<%= link_to 'Editar', edit_employe_path(@employe), class: 'btn btn-warning text-white' %> |
<%= link_to 'Volver', employes_path, class: 'btn btn-danger text-white' %>
</div>
</div>
</div>
</div>
</div>